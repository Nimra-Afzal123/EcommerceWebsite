@model Cart
@{
    ViewData["Title"] = "updateCart";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<h1>Update/Edit Cart</h1>
<div class="row">
	<div class="col-md-2"></div>

	<div class="col-md-8">

		<form method="post">
			<input type="hidden" name="cart_id" value="@Model.cart_id" />
			<input type="hidden" name="prod_id" value="@Model.prod_id"/>
			<input type="hidden" name="cust_id" value="@Model.cust_id" />
			<input type="hidden" name="product_quantity" value="@Model.cart_id"/>
			<select name="cart_status" class="form-control mt-3">
				<option value="0">Pending</option>
				<option value="1">Order</option>
			</select>
			<input type="submit" value="Update Cart" class="form-control my-3 btn btn-primary" />
		</form>

	</div>


	<div class="col-md-2"></div>
</div>


