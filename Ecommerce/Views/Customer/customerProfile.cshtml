@model List<Customer>
@{
    ViewData["Title"] = "customerProfile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Customer Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header text-center bg-primary text-white">
                        <h4>Customer Profile</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data" asp-action="changeProfileImage">
                            <img src="@("~/customer_image/"+Model[0].customer_image)" asp-append-version="true" style="height:200px;width:200px" />
                            <input type="file" name="customer_image"/>
                            <input type="hidden" name="customer_id" value="@Model[0].customer_id" />
                            <div class="mb-3">
                                <input type="hidden" placeholder="Enter Your Name" name="customer_name" class="form-control" value="@Model[0].customer_name" required />
                            </div>
                            <div class="mb-3">
                                <input type="hidden" placeholder="Enter Your Phone Number" name="customer_phone" class="form-control" value="@Model[0].customer_phone" required />
                            </div>
                            <div class="mb-3">
                                <input type="hidden" placeholder="Enter Your Email" name="customer_email" class="form-control" value="@Model[0].customer_email" required />
                            </div>
                            <div class="mb-3">
                                <input type="hidden" placeholder="Enter Your Password" name="customer_password" class="form-control" value="@Model[0].customer_password" required />
                            </div>
                            <div class="mb-3">
                                <input type="hidden" placeholder="Enter Your gender" name="customer_gender" class="form-control" value="@Model[0].customer_gender" required />
                            </div>
                            <div class="mb-3">
                                <input type="hidden" placeholder="Enter Your Country" name="customer_country" class="form-control" value="@Model[0].customer_country" required />
                            </div>
                            <div class="mb-3">
                                <input type="hidden" placeholder="Enter Your City" name="customer_city" class="form-control" value="@Model[0].customer_city" required />
                            </div>
                            <div class="mb-3">
                                <input type="hidden" placeholder="Enter Your Address" name="customer_address" class="form-control" value="@Model[0].customer_address" required />
                            </div>
							<input type="submit" value="Change Image" class="btn btn-primary" />
                         </form>
                        <form method="post" asp-action="updateProfile">
							<input type="hidden" name="customer_id" value="@Model[0].customer_id" />
                            <div class="mb-3">
                                <input type="text" placeholder="Enter Your Name" name="customer_name" class="form-control" value="@Model[0].customer_name" required />
                            </div>
                            <div class="mb-3">
                                <input type="text" placeholder="Enter Your Phone Number" name="customer_phone" class="form-control" value="@Model[0].customer_phone" required />
                            </div>
                            <div class="mb-3">
                                <input type="email" placeholder="Enter Your Email" name="customer_email" class="form-control" value="@Model[0].customer_email" required />
                            </div>
                            <div class="mb-3">
                                <input type="password" placeholder="Enter Your Password" name="customer_password" class="form-control" value="@Model[0].customer_password" required />
                            </div>
                            <div class="mb-3">
                                <input type="text" placeholder="Enter Your gender" name="customer_gender" class="form-control" value="@Model[0].customer_gender" required />
                            </div>
                            <div class="mb-3">
                                <input type="text" placeholder="Enter Your Country" name="customer_country" class="form-control" value="@Model[0].customer_country" required />
                            </div>
                            <div class="mb-3">
                                <input type="text" placeholder="Enter Your City" name="customer_city" class="form-control" value="@Model[0].customer_city" required />
                            </div>
                            <div class="mb-3">
                                <input type="text" placeholder="Enter Your Address" name="customer_address" class="form-control" value="@Model[0].customer_address" required />
                            </div>
                            <div class="mb-3">
                                <input type="hidden" name="customer_image" class="form-control" value="@Model[0].customer_image" required />
                            </div>
                            <div class="d-grid" >
                                <input type="submit" value="Save" class="btn btn-primary" />
                              
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

